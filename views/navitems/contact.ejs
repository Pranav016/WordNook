<%- include("../partials/header", {isAuthenticated}) -%>

<div class="col-md-4 mx-2 mx-md-auto my-5">
    <h1 class="text-center">Contact Us</h1>
    <p class="alert alert-success"> <%= contactContent %> </p> 
    <br>

    <% if(error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <!-- contact form section -->
    <div class="container-centre">
    
        <form class="edit-form" action="/contact" method="POST" class="mt-4 my-4" id='contact-form'>
            <div class="form-group">
                <label>Your Email</label>
                <input class="form-control col-md-12 col-sm-12 col-xs-12" type="email" name="email" autocomplete="off"
                    value="<%= formData.email %>" required autofocus></input>
            </div>
            <div class="form-group">
                <label>Subject</label>
                <input class="form-control col-md-12 col-sm-12 col-xs-12" type="text" name="subject" autocomplete="off"
                    value="<%= formData.name %>" required></input>
            </div>
            <div class="form-group">
                <label>Message</label>
                <textarea class="form-control col-md-12 col-sm-12 col-xs-12" rows="6" name="message"
                    value="<%= formData.message %>" required></textarea>
            </div>
            <button class="button test-button share-button send-btn" type="submit">Send</button>
        </form>
    </div>
</div>

<%- include("../partials/footer") -%>